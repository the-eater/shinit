#!/usr/bin/env perl6

use v6.c;
use lib "/opt/shinit/lib";
use Shinit;

sub MAIN() {
  try {
    CATCH {
      default {
        say "We just fully died, here is the stacktrace:";
        say .Str;
        say "{.subname} {.file}:{.line}" for .backtrace;
        say "\nNow have fun playing around in bash";
        run '/usr/bin/bash';
        .resume;
      }
    }

    my $init = Shinit.new;
    $init.run;
  }
}
